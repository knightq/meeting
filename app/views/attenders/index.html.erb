<h1>Lista degli invitati</h1>

<table>
  <tr>
  </tr>

<% @attenders.each do |attender| %>
  <tr>
    <td><%= link_to attender.name, attender %></td>
    <td><%= link_to 'Modifica', edit_attender_path(attender) %></td>
    <td><%= link_to 'Cancella', attender, :confirm => 'Sicuro sicuro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

