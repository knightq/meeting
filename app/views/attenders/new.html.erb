<h1>Nuovo invitato</h1>

<% form_for(@attender) do |f| %>
  <%= f.error_messages %>
  <table>
    <tbody>
       <tr>
	  <td>
	    <%= f.label :nome %><br />
	    <%= f.text_field :name %>
	  </td>
	  <td>
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </td>
	</tr>
  	<tr>
	  <td>
	    <%= f.label :telefono %><br />
	    <%= f.text_field :phone %>
	  </td>
	  <td>
	  </td>
	</tr>
  	<tr>
	  <td>
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </td>
	  <td>
	   <%= f.label :Conferma_password %><br />
	   <%= f.password_field :password_confirmation %>
	  </td>
	</tr>
    </tbody>
  </table>
  <p>
    <%= f.submit 'Crea' %>
  </p>
<% end %>

<%= link_to 'Indietro', attenders_path %>
