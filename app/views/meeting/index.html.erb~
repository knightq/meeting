<h1>Attualmente in programma</h1>

<%= calendar(:year => Date.today.year, :month => Date.today.month, :first_day_of_week => 1) do |d|
    cell_text = "#{d.mday}<br />"
    cell_attrs = {:class => 'day'}
    @meetings.each do |e|
      if e.date == d
        cell_attrs[:class] = 'specialDay'
	cell_text = %{
	   <div class="top_left_corner">#{d.mday}</div> 
           <img src="#{e.image_url}" height="30px"/>
	}
      end
    end
    [cell_text, cell_attrs]
  end
%>

<% for meeting in @meetings -%>
  <div class="meeting">
    <%= image_tag(meeting.image_url) %>
    <h3><%=h meeting.title %></h3>
    <div class="description-line">
      <span class="description" ><%= meeting.body%></span>
      <% if not @meetings.include?(meeting) %>
	<%= button_to "Partecipa!", :action => 'add_to_cart', :id => meeting %>
	<% else %>
        <%= button_to "Non mi interessa piÃ¹", :action => 'remove_from_cart', :id => meeting %>
      <% end %>
    </div>
  </div>
  <hr/>
<% end %>
